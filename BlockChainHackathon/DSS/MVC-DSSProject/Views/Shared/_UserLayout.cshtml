@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="x-ua-compatible" content="ie=edge">

    <title>DSS</title>

    <link rel="stylesheet" href="~/Tema/plugins/fontawesome-free/css/all.min.css">                          <!-- Font Awesome Icons -->
    <link rel="stylesheet" href="http://code.ionicframework.com/ionicons/2.0.1/css/ionicons.min.css">       <!-- IonIcons -->
    <link rel="stylesheet" href="~/Tema/dist/css/adminlte.min.css">                                         <!-- Theme style -->
    <link href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700" rel="stylesheet"> <!-- Google Font: Source Sans Pro -->
    <script src="~/Tema/plugins/jquery/jquery.min.js"></script>                                             <!-- jQuery -->
    <script src="~/Tema/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>                             <!-- Bootstrap -->
    <script src="~/Tema/dist/js/adminlte.js"></script>                                                      <!-- AdminLTE -->
    <!-- OPTIONAL SCRIPTS -->
    <script src="~/Tema/plugins/chart.js/Chart.min.js"></script>
    <script src="~/Tema/dist/js/demo.js"></script>
    <script src="~/Tema/dist/js/pages/dashboard3.js"></script>

</head>

<body class="hold-transition sidebar-mini">
    <div class="wrapper">
        <aside class="main-sidebar sidebar-dark-primary elevation-4">
            <a href="#" class="brand-link">
                <img src="~/Tema/dist/img/DSS-Logo.png" alt="Logo" class="brand-image img-circle elevation-3"
                     style="opacity: .8">
                <span class="brand-text font-weight-light">- DSS -</span>
            </a>

            <!-- Sidebar -->
            <div class="sidebar">

                <div class="user-panel mt-3 pb-3 mb-3 d-flex">
                    @*<div class="image">
                            <img src="~/Tema/dist/img/user2-160x160.jpg" class="img-circle elevation-2" alt="User Image">
                        </div>*@
                    <div class="info">
                        <a href="#" class="d-block">Yetki: Kullanıcı</a>
                    </div>
                </div>

                <!-- Sidebar Menu -->
                <nav class="mt-2">
                    <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
                        <li class="nav-item has-treeview">
                            <a href="/User/UserProfile/" class="nav-link">
                                <i class="nav-icon fas fa-user"></i>
                                <p>
                                    Profilim
                                </p>
                            </a>
                        </li>

                        <li class="nav-item">
                            <a href="/Balance/AddBalance/" class="nav-link">
                                <i class="nav-icon fas fa-wallet"></i>
                                <p>
                                    Hesaba Para Yatır
                                </p>
                            </a>
                        </li>

                        <li class="nav-item">
                            <a href="/Sell/NewSell/" class="nav-link">
                                <i class="nav-icon fas fa-edit"></i>
                                <p>
                                    İlan Oluştur
                                </p>
                            </a>
                        </li>

                        <li class="nav-item has-treeview">
                            <a href="/Sell/UserAllSell/" class="nav-link">
                                <i class="nav-icon fas fa-list-alt"></i>
                                <p>
                                    İlanları Görüntüle
                                </p>
                            </a>
                        </li>

                        <li class="nav-item has-treeview">
                            <a href="/Sold/MySolds/" class="nav-link">
                                <i class="nav-icon fas fa-list-alt"></i>
                                <p>
                                    Satın Aldıklarım
                                </p>
                            </a>
                        </li>

                        <li class="nav-item has-treeview">
                            <a href="/Login/LogOut/" class="nav-link">
                                <i class="nav-icon fas fa-sign-out-alt"></i>
                                <p>
                                    Çıkış Yap
                                </p>
                            </a>
                        </li>
                    </ul>
                </nav>
            </div>
        </aside>

        <div class="content-wrapper">
            <div class="content">
                @RenderBody()
            </div>
        </div>
    </div>
</body>
</html>