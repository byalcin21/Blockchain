
@{
    Layout = null;
}

<!doctype html>
<html lang="en">
<head>
    <title>DSS | Login </title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link href="https://fonts.googleapis.com/css?family=Lato:300,400,700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="~/Tema/login-form-20/css/style.css">

</head>
<body class="img js-fullheight" style="background-image: url(/Tema/login-form-20/images/bg2.jpg);">
    <section class="ftco-section">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-6 text-center">
                    <h1 class="heading-section">DSS</h1>
                    <p class="heading-section"> | Data Storage Sell | </p>
                </div>
            </div>
            <div class="row justify-content-center">
                <div class="col-md-6 col-lg-4">
                    <div class="login-wrap p-0">
                        <h3 class="mb-4 text-center">Have An Account?</h3>
                        @using (Html.BeginForm("Index", "Login", FormMethod.Post))
                        {
                            <div class="form-group">
                                <input type="text" name="UserMail" class="form-control" placeholder="Mail Address" required>
                            </div>
                            <div class="form-group">
                                <input id="password-field" name="UserPassword" type="password" class="form-control" placeholder="Password" required>
                                <span toggle="#password-field" class="fa fa-fw fa-eye field-icon toggle-password"></span>
                            </div>
                            <div class="form-group">
                                <button type="submit" class="form-control btn btn-danger submit px-3">Login</button>
                            </div>
                            <div class="form-group d-md-flex">
                                <div class="w-100 text-center">
                                    <a href="#" style="color: #fff">I Forgot My Password</a>
                                </div>
                            </div>
                        }
                        <p class="w-100 text-center">&mdash; Or Login With Social Media &mdash;</p>
                        <div class="social d-flex text-center">
                            <a href="#" class="px-2 py-2 mr-md-1 rounded"><span class="ion-logo-facebook mr-2"></span> Facebook</a>
                            <a href="#" class="px-2 py-2 ml-md-1 rounded"><span class="ion-logo-twitter mr-2"></span> Twitter</a>
                        </div>
                        <p class="w-100 text-center">&mdash; To Register, Contact Us By Email! &mdash;</p>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <script src="~/Tema/login-form-20/js/jquery.min.js"></script>
    <script src="~/Tema/login-form-20/js/popper.js"></script>
    <script src="~/Tema/login-form-20/js/bootstrap.min.js"></script>
    <script src="~/Tema/login-form-20/js/main.js"></script>

</body>
</html>