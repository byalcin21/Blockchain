@using EntityLayer.Concrete
@model User

@{
    ViewBag.Title = "UserProfile";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

<body class="hold-transition sidebar-mini">
    <div class="wrapper">
        <section class="content-header">
            <div class="container-fluid">
                <div class="row mb-2">
                    <div class="col-sm-6">
                        <h1>Profil</h1>
                    </div>
                </div>
            </div>
        </section>

        <!-- Main content -->
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-3">
                    <!-- Profile Image -->
                    <div class="card card-primary card-outline">
                        <div class="card-body box-profile">
                            <div class="text-center">
                                <img class="profile-user-img img-fluid img-circle" src="~/Tema/dist/img/User.png" alt="User profile picture">
                            </div>
                            <!-- About -->
                            <h3 class="profile-username text-center"> @Model.UserName @Model.UserSurname </h3>
                            <p class="text-muted text-center"> @Model.UserMail </p>
                        </div>
                    </div>

                    <div class="card">
                        <div class="card-header">
                            <h3 class="card-title">Bakiye</h3>
                            <div class="card-tools">
                                <button type="button" class="btn btn-tool" data-card-widget="collapse">
                                    <i class="fas fa-minus"></i>
                                </button>
                                <button type="button" class="btn btn-tool" data-card-widget="remove">
                                    <i class="fas fa-times"></i>
                                </button>
                            </div>
                        </div>
                        <!-- /.card-header -->
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-8">
                                    <p class="text-muted"> Bakiye Değeriniz: <button class="btn btn-success">@Model.Account.Balance</button> </p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- /.col -->
                <div class="col-md-9">
                    <div class="card">
                        <div class="card-body">
                            <div class="tab-content">
                                <div class="active tab-pane" id="activity">
                                    <!-- Post -->
                                    <div class="post">
                                        <div class="user-block">
                                            <img class="img-circle img-bordered-sm" src="~/Tema/dist/img/User.png" alt="user image">
                                            <span class="username">
                                                <a href="#">@Model.UserName @Model.UserSurname</a>
                                                <a href="#" class="float-right btn-tool"><i class="fas fa-times"></i></a>
                                            </span>
                                            <span class="description">Paylaşım - 7:30 PM </span>
                                            <span class="description"> @Model.UserMail </span>
                                        </div>
                                        <!-- /.user-block -->
                                        <p>
                                            İlerleyen zaman zarfı içerisinde olay akışları ile birlikte tüm içeriğinizi burada görüntüleyebiliceksiniz.<br />
                                            Şimdiden sabrınız için teşekkür ederiz.<br /><br />
                                            - DSS | Data Storage Sell Ekibi - 
                                        </p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>